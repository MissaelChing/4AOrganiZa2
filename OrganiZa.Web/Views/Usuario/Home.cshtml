                                    <a type="button" class="btn btn-success btn-lg btn-block" asp-page="/RegistroA">Administrador</a>
                                </div>

                            </div>
                            <br>
                            <br>
                            <br>

                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-4">
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
