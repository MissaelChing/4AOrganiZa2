@model CalendarioModels
@{


}

<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<div class="container">

    <form id="signup" class="mt-3" method="post">

        <div class="header">
            <br>



        </div>
        <div class="col-md-12">
            <br>
            <br>
            <br>
        </div>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Nombre
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Escuelas.NombreE)
                </dd>

            </dl>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="sep"></div>


            <div class="inputs">
                @Html.EditorFor(model => model.Calendario.MesPago, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mes", @autofocus_autocomplete = "off", @type = "month" } })


                <div class="col-md-12">
                    <br>
                    <br>
                    <br>
                </div>
                <button id="submit" class="btn btn-success btn-block" type="submit">Agregar</button>
            </div>
        }
        <a asp-controller="Calendario" asp-action="Comprobacion" class="btn btn-success m-1">Ver fechas agregadas</a>

    </form>

</div>
